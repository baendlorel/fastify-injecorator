{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "noEmitOnError": true,
    "strict": true,
    "strictPropertyInitialization": false, // 允许未初始化的属性，用在装饰器上
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".", // 相对路径的起点
    "paths": {
      "@/*": ["src/*"], // 把 @ 映射到 src
      "@tests/*": ["tests/*"]
    }
  },
  "include": ["src/**/*.ts", "example/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
